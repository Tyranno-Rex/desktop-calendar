{
  "appId": "com.desktop-calendar.app",
  "productName": "Desktop Calendar",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "env/.env"
  ],
  "asar": true,
  "asarUnpack": [
    "**/*.node"
  ],
  "win": {
    "target": ["nsis", "portable"],
    "icon": "public/icon.png",
    "signAndEditExecutable": false,
    "extraResources": []
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "public/icon.png"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
